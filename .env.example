# Database (Neon)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# API Server
API_PORT=3001
API_HOST=0.0.0.0

# Frontend URL (for CORS)
FRONTEND_URL=https://www.tandagallery.com

# Public-facing API URL (used for proxy URLs returned to clients)
# In production this should be the URL that browsers can reach the API at.
# If your frontend rewrites /api/v1/* to the backend, use the frontend URL.
API_PUBLIC_URL=https://www.tandagallery.com

# Ingestion Settings
INGEST_POLL_INTERVAL_MS=1200000
INGEST_MAX_PAGES_PER_RUN=10
INGEST_MAX_CONCURRENT_SOURCES=5
ENABLE_QUEUES=true
